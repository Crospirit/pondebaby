```python
import pandas as pd
import json
import matplotlib.pyplot as plt

# Cargar datos desde el archivo JSON
with open('datos.json', 'r') as f:
    datos = json.load(f)

# Crear DataFrames separados para niños y niñas
edades = [entry["edad"] for entry in datos["peso_para_edad"]]
percentiles_ninos = {p: [entry["ninos"][p] for entry in datos["peso_para_edad"]] for p in ["P3", "P25", "P50", "P75", "P97"]}
percentiles_ninas = {p: [entry["ninas"][p] for entry in datos["peso_para_edad"]] for p in ["P3", "P25", "P50", "P75", "P97"]}

# Convertir en DataFrames
df_ninos = pd.DataFrame(percentiles_ninos, index=edades)
df_ninas = pd.DataFrame(percentiles_ninas, index=edades)

# Graficar los percentiles para niños y niñas
def graficar_percentiles(df, titulo):
    plt.figure(figsize=(10, 6))
    for columna in df.columns:
        plt.plot(df.index, df[columna], label=columna)
    plt.xlabel("Edad")
    plt.ylabel("Peso (kg)")
    plt.title(titulo)
    plt.legend()
    plt.xticks(rotation=45)
    plt.tight_layout()
    plt.show()

# Graficar percentiles
graficar_percentiles(df_ninos, "Percentiles de Peso para Edad - Niños")
graficar_percentiles(df_ninas, "Percentiles de Peso para Edad - Niñas")
